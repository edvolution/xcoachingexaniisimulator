<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.xcoaching.exanii.simulator.activities.ExaniiSimulatorStartActivity$PlaceholderFragment" >

    <LinearLayout
        android:id="@+id/exanii_simulator_test_question_buttons"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/exanii_simulator_test_question_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exanii_simulator_next_button_text"
            android:textSize="@dimen/exanii_simulator_button_text_size"
            android:textStyle="bold" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/exanii_simulator_test_question_scroll_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/exanii_simulator_test_question_buttons"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/exanii_simulator_test_question_padding_left"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/exanii_simulator_test_question_padding_top"
        android:scrollbars="vertical" >

        <TableLayout
            android:id="@+id/exanii_simulator_test_question_table"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TableRow
                android:id="@+id/exanii_simulator_test_question_resource_image_row"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/exanii_simulator_test_question_resource_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:contentDescription="@string/exanii_simulator_test_question_resource_image_text"
                    android:gravity="center_horizontal"
                    android:src="@drawable/hv_1" />
            </TableRow>

            <TableRow
                android:id="@+id/exanii_simulator_test_question_text_row"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/exanii_simulator_test_question_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="@dimen/exanii_simulator_test_cover_exam_type_table_row_large_padding"
                    android:text="@string/hv_1"
                    android:textSize="@dimen/exanii_simulator_medium_question_size"
                    android:textStyle="bold" />
            </TableRow>

            <RadioGroup
                android:id="@+id/exanii_simulator_test_question_answers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RadioButton
                    android:id="@+id/exanii_simulator_test_question_answer_a"
                    android:text="@string/hv_1_a"
                    android:textSize="@dimen/exanii_simulator_medium_answer_size" />

                <RadioButton
                    android:id="@+id/exanii_simulator_test_question_answer_b"
                    android:text="@string/hv_1_b"
                    android:textSize="@dimen/exanii_simulator_medium_answer_size" />

                <RadioButton
                    android:id="@+id/exanii_simulator_test_question_answer_c"
                    android:text="@string/hv_1_c"
                    android:textSize="@dimen/exanii_simulator_medium_answer_size" />

                <RadioButton
                    android:id="@+id/exanii_simulator_test_question_answer_d"
                    android:text="@string/hv_1_d"
                    android:textSize="@dimen/exanii_simulator_medium_answer_size" />
            </RadioGroup>
        </TableLayout>
    </ScrollView>

</RelativeLayout>